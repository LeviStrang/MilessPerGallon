@model IEnumerable<MilesPerGallon.Models.Friend>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>



@using (Html.BeginForm())
{
    <p>
        Search @Html.TextBox("searchString") <br />
        <input type="submit" value="Filter" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MileDriven)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GallonsFilled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FillUpDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MileDriven)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GallonsFilled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FillUpDate)
            </td>
            <td>
                
            </td>
        </tr>
    }

</table>
